<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaobai.classcommunication.mapper.ArticleMapper">
    <select id="getAllArticle" resultType="com.xiaobai.classcommunication.bean.Article">
        select * from class_arcticle
    </select>
    <insert id="insertArticle" parameterType="com.xiaobai.classcommunication.bean.Article">
        insert into class_arcticle(UserID,Title,Content,Columns,WatchCount,CommentsCount,Experience)
        values(#{UserID},#{Title},#{Content},#{Columns},#{WatchCount},#{CommentsCount},#{Experience})
    </insert>
    <select id="getArticleByID" resultType="com.xiaobai.classcommunication.bean.Article" parameterType="integer">
        select * from class_arcticle where ID=#{ID}
    </select>
</mapper>