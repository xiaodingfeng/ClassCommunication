<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaobai.classcommunication.mapper.ReplyMapper">
    <select id="getAllReply" resultType="com.xiaobai.classcommunication.bean.Reply">
        select * from class_reply
    </select>
    <insert id="insertReply" parameterType="com.xiaobai.classcommunication.bean.Reply">
        insert into class_reply(ArticleID,ReplyContent,LikeCount,ReplyTime)
        values(#{ArticleID},#{ReplyContent},#{LikeCount},#{ReplyTime})
    </insert>

</mapper>